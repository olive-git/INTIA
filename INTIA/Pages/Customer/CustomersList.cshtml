@page
@model INTIA.Pages.Customers.CustomersListModel
@{
	ViewData["Title"] = "Customers List";
}

<div class="w-full h-full flex flex-col">
<div class="w-2/3 h-full p-3 m-auto flex flex-col justify-center items-center">
	<h1 class="mb-4">Customers list</h1>
	<table class="table table-auto min-w-1/2 border border-gray-200">
		<thead class="bg-gray-100">
			<tr>
				<th class="px-4 py-2 border">First Name</th>
				<th class="px-4 py-2 border">Last Name</th>
				<th class="px-4 py-2 border">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model.Customers)
			{
				<tr>
					<td class="px-4 py-2 border">@customer.Firstname</td>
					<td class="px-4 py-2 border">@customer.Lastname</td>
					<td class="px-4 py-2 border">
						<div class="buttons-list flex gap-2">
							<a asp-asp-page="/Customer/CustomerDetail" asp-route-itemid="@customer.Id" class="border border-gray rounded-md py-1 px-2">
								<i class="fa-regular fa-eye"></i>
							</a>
						</div>
					</td>
				</tr>
			}
    
		</tbody>
</table>
</div>
<div class="px-5 flex justify-end">
	<button class="bg-blue-400 hover:bg-blue-500 rounded-full text-center text-white h-14 w-14">
		<i class="fa-regular fa-plus"></i>
	</button>
</div>
</div>